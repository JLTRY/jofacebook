	<authorEmail>jltryoen@orange.fr</authorEmail>
	<authorUrl>www.jltryoen.fr</authorUrl>
	<description>PLG_CONTENT_JOFBKPOST_DESCRIPTION</description>
	<namespace path="src">JLTRY\Plugin\Content\JOFbkPost</namespace>
	<files>
		<folder plugin="jofbkpost">services</folder>
		<folder>src</folder>
		<folder>language</folder>
	</files>
	<updateservers>
		<server type="extension" priority="1" name="JO Favorites Updates">
			https://raw.githubusercontent.com/JLTRY/jofavorites/master/jofavorites-update.xml
		</server>
	</updateservers>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="appid" 
					type="text" 
					default="" 
					label="id for facebook" 
					size="32"
					maxlength="20"/>
			</fieldset>
		</fields>
	</config>
</extension>
