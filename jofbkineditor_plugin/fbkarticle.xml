<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" method="upgrade" group="editors-xtd">
	<name>Editor - FBKArticle</name>
	<author>TRYOEN Jean-Luc</author>
	<creationDate>August 11, 2025</creationDate>
	<copyright>(c) JL TRYOEN, 2016. All rights reserved.</copyright>
	<license>GPL</license>
	<authorEmail>Email</authorEmail>
	<authorUrl>Your URL</authorUrl>
	<version>1.0.0</version>
	<description>
		"This plugin adds sample button to the editor to be able to add a facebook article
		Do not forget to publish the plugin!"
	</description>
	<files>
		<filename plugin="fbkarticle">fbkarticle.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="id" type="text" default="" label="Site ID" description="id of your facebook site" />
			</fieldset>
		</fields>
	</config>
</extension>
